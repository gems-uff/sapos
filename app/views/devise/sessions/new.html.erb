<div id="login_form_wrapper">
  <% unless alert.blank? %>
      <div id="error_login"><%= flash[:alert] %></div>
  <% end %>

  <div id="form_border">
    <%= form_for(
      resource,
      as: resource_name,
      url: session_path(resource_name),
      html: { id: "login_form" }
    ) do |f| %>
        <%= flash[:name] %>
        <% if CustomVariable.instance_name %>
          <div style="margin-bottom: 10px;">
            Login de acesso para <%= CustomVariable.instance_name %>
          </div>
        <% end %>

        <div id="login_input">
          <%= f.label :email, 'Email ou CPF' %>
          <%= f.text_field :email, autocomplete: "email" %>
        </div>

        <br/>

        <div id="password_input">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>

        <br/>


        <% if devise_mapping.rememberable? -%>
            <div id="remember_me_input">
              <div>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "Lembrar de mim" %>
              </div>
            </div>

        <% end -%>

        <br/>

        <%= f.submit "Login" %>
    <% end %>
  </div>
</div>
<%= render partial: "devise/shared/links" %>
